{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016","dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "jsx": "react",
    "noUnusedLocals": false,
    "outDir": "dist/",
    "rootDir": "src/",
    "skipLibCheck": true
  },
  "filesGlob": [
    "node_modules/@types",
    "**/*.ts",
    "!node_modules",
    "!js/*"
  ]
}